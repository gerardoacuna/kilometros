<%= simple_form_for(@donation, :validate => true) do |f| %>
  <%= f.error_notification %>

  <div id="rootwizard">
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <ul>
            <li><a href= "#tab1"  data-toggle="tab">Carrera</a></li>
            <li><a href= "#tab2"  data-toggle="tab">Causas</a></li>
            <li><a href= "#tab3"  data-toggle="tab">Cantidad</a></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="tab-content">
      <div class="tab-pane" id="tab1">
        <%= f.association :race, as: :radio_buttons %>
      </div>
      <div class="tab-pane" id="tab2">
        <%= f.association :cause, as: :radio_buttons %>
      </div>
      <div class="tab-pane" id="tab3">
        <%= f.input :amount %>
        <%= f.button :submit, 'Save', class: 'btn btn-large' %>
      </div>
      <ul class="pager wizard">
        <li class="previous"><a href="#">Previous</a></li>
        <li class="next last" style="display:none;"><a href="#">Last</a></li>
          <li class="next"><a href="#">Next</a></li>
      </ul>
    </div>  
  </div>
  <%= f.hidden_field :user_id, value: current_user.try(:id) %>
<% end %>