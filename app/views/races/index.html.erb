<h1>Listing races</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Place</th>
      <th>Date</th>
      <th>Distance</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

<% @races.each do |race| %>
  <tr>
    <td><%= image_tag race.attachment.file_url(:thumb) %></td>
    <td><%= race.name %></td>
    <td><%= race.place %></td>
  <% race.race_details.each do |details| %>
    <td><%= details.date %></td>
    <td><%= details.distance %> Km.</td> 
  <% end %>
    <td><%= link_to 'Show', race %></td>
    <td><%= link_to 'Edit', edit_race_path(race) %></td>
    <td><%= link_to 'Destroy', race, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

